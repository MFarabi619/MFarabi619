    "clean": "git clean -fdX -e '!**/.env*' -e '!libs/db/data' # üßΩ Remove any and all files listed in .gitignore except .env and libs/db/data",
    "nuke": "pnpm nx destroy db; sudo git clean -fdX; # üö® WARNING: REMOVE ANY AND ALL FILES LISTED IN .gitignore INCLUDING .env and libs/db/data",
    "ri": "pnpm clean; pnpm i; pnpm d; # üßπ Perform a clean install",
    "d": "pnpm nx shell microdoctor # üíä Run MicroDoctor",
    "storybook": "pnpm nx storybook -p $STORYBOOK_DEV_SERVER_PORT --no-open # üé® Design System - Storybook",
    "lint": "eslint .",
    "fix": "eslint . --fix # ü´ß Auto-fix annoying ESLint squigglies",
    "lint:inspect-build": "pnpx @eslint/config-inspector build --outDir dist/config-inspector",
    "commit": "pnpm cz # Commitizen CLI",
    "chromatic": "pnpx chromatic # Visual Test Server",
    "prepare": "husky # ü™ù Git Hook",
    "lighthouse": "pnpm exec serve lighthouse-report --no-clipboard & sleep 1 && xdg-open 'http://localhost:3000/latest-report'"
