layout {
    default_tab_template {
        pane {
            size 1
            borderless true
            plugin location="zellij:tab-bar"
        }
        children
        pane {
            size 2
            borderless true
            plugin location="zellij:status-bar"
        }
    }

    tab name="ğŸ§® Servers" focus=true {
        pane {
        split_direction "vertical"
        pane{
        split_direction "horizontal"
            pane {
            name "ğŸ’¿ Database | 5432 | Nix-PostgreSQL"
            command "pnpm"
            args "nx" "up" "infra"
            cwd "../"
            }
            pane {
            name "âš™ Admin Panel | 8000"
            command "pnpm"
            args "nx" "dev" "admin"
            cwd "../"
            }
            }
            pane {
            split_direction "horizontal"
            pane {
            name "ğŸ—º Project Graph - Nx | 4211 | graph.mfarabi.dev"
            command "pnpm"
            args "nx" "graph" "--groupByFolder" "--verbose"
            cwd "../"
            size "50%"
            start_suspended true
                }
            }
            }


        floating_panes {
            pane {
                name "ğŸ©º System Health - btop"
                command "btop"
            }
        }
    }

    tab name="ğŸŸ© Status" {
        pane split_direction="vertical" {
            pane {
                name "ğŸ’ Git - Lazygit"
                command "lazygit"
            }

            pane {
                name "ğŸ“ File Browser - Yazi"
                command "env"
                args "YAZI_CONFIG_HOME=./" "yazi"
            }
        }

        floating_panes {
            pane {
                name "ğŸ§  TGPT"
                command "tgpt"
                args "-m"
            }
        }
    }

  tab name="ğŸ”Œ API" hide_floating_panes=true {
        pane split_direction="vertical" {
                pane {
                    name "Posting"
                    cwd "posting"
                    command "posting"
                    args "-e" "dev.env" "--collection" "."
                }
        }
    }

     tab name="ğŸ’¿ Database" {
        pane {
        command "harlequin"
        args "--adapter=postgres" "postgres://postgres:password@127.0.0.1:5432/postgres?sslmode=disable"
        }
    }
}
