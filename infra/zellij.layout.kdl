layout {
    default_tab_template {
        pane {
            size 1
            borderless true
            plugin location="zellij:tab-bar"
        }
        children
        pane {
            size 2
            borderless true
            plugin location="zellij:status-bar"
        }
    }
    tab name="ğŸ§® SERVERS" focus=true split_direction="vertical" cwd="../"  {
            pane {
                name "ğŸ•¹ Admin | 8000 | admin.mfarabi.dev"
                command "pnpm"
                args "nx" "dev" "admin"
            }
            pane {
            split_direction "horizontal"
            pane {
                command "pnpm"
                name "ğŸ¨ Storybook | 6006 | design.mfarabi.dev"
                args "storybook"
                start_suspended true
            }
            }
            pane split_direction="horizontal" {
                pane {
                    command "pnpm"
                    name "ğŸ› Architecture | 5173 | arch.mfarabi.dev"
                    args "nx" "dev" "arch"
                    start_suspended true
                }
                pane {
                    name "ğŸ—º Project Graph - Nx | 4211 | graph.mfarabi.dev"
                    command "pnpm"
                    args "nx" "graph" "--groupByFolder"
